<?xml version="1.0" encoding="UTF-8"?>

<?import com.gluonhq.charm.glisten.control.Icon?>
<?import com.gluonhq.charm.glisten.mvc.View?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>

<View fx:id="loginView" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.gluonhq.chat.views.LoginPresenter">
    <center>
        <VBox alignment="TOP_CENTER" spacing="20.0" styleClass="box" BorderPane.alignment="CENTER">
            <children>
                <Label fx:id="label" text="%label.text.1" textAlignment="CENTER" />
                <TextField fx:id="username" styleClass="text-field" promptText="Username"/>
                <Button fx:id="button" mnemonicParsing="false" text="%button.text">
                    <graphic>
                        <Icon content="LANGUAGE" />
                    </graphic>
                </Button>
            </children>
            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
            </padding>
        </VBox>
    </center>
    <top>
        <Pane fx:id="top" prefHeight="0.0" styleClass="top" BorderPane.alignment="CENTER" />
    </top>
</View>